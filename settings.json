{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "MCP_TIMEOUT": "120000",
    "MCP_TOOL_TIMEOUT": "240000",
    "BASH_DEFAULT_TIMEOUT_MS": "240000",
    "MAX_MCP_OUTPUT_TOKENS": "50000"
  },
  "permissions": {
    "allow": [
      "Read(**)",
      "mcp__jai-chat-mcp",
      "mcp__serena",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run test:*)",
      "Bash(npm run build:*)",
      "Bash(uv sync)",
      "Bash(uv run:*)",
      "Bash(head:*)",
      "Bash(cut:*)",
      "Bash(grep:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "cursor -r --goto \"$(jq -r '.tool_input.file_path'):$(jq -r '.tool_input.start_line // 1')\""
          }
        ]
      }
    ]
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754059573754
  }
}
